            <column name="description" value="Acceso a funciones de fare"/>
        </insert>
        <insert tableName="role">
            <column name="role" value="ROLE_REGISTER"/>
            <column name="description" value="Acceso a funciones de Register"/>
        </insert>
    </changeSet>

